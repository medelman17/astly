{
  "name": "@astly/components",
  "version": "0.0.1",
  "license": "GPLv3",
  "sideEffects": false,
  "repository": "git@github.com:fabulascode/astly.git",
  "author": "Michael Edelman <michael@fabulas.io>",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "react-native": "build/index.native.js",
  "jsnext:main": "build/index.es.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "yarn clean && concurrently yarn:build-*",
    "build-web": "rollup -c",
    "build-native": "IS_NATIVE=true rollup -c",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json ",
    "prepublishOnly": "yarn build",
    "start": "tsc -w",
    "test": "jest --coverage",
    "watch": "yarn clean && concurrently yarn:watch-*",
    "watch-web": "rollup -c --watch",
    "watch-native": "IS_NATIVE=true rollup -c --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-native": "0.62.3",
    "styled-components": "^5.0.0-rc.2"
  },
  "dependencies": {
    "@astly/helpers": "*",
    "@astly/hooks": "*",
    "@astly/themes": "*",
    "styled-system": "^5.1.4",
    "styled-components-modifiers": "^1.2.5"
  },
  "devDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-is": "^16.12.0",
    "react-native": "0.62.3",
    "react-native-web": "^0.11.7",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "styled-components": "^5.0.0-rc.2",
    "typescript": "^3.7.3"
  }
}
